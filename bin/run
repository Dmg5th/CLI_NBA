#!/usr/bin/env ruby

require './lib/environment'



Cli.new.start

Cli.new.display_team

while Player.all.empty?
  puts "There is currently no information for this team, please pick another."

Cli.new.pick_team

end 

puts "Great pick! Above is the current standing and roster for that team"
Cli.new.get_player_attributes

Cli.new.final_statement